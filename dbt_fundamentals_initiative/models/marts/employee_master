with employees as 
(SELECT businessentityid,
       org,
       organizationlevel,
       birthdate,
       gender,
       hiredate
from {{ref("stg_employee")}} ),



department as 
( SELECT departmentid,
        department_name,
        groupname as business_unit

FROM {{ref("stg_department")}} ),


employee_master as 
( SELECT employees.businessentityid,
       employees.org,
       employees.organizationlevel,
       employees.birthdate,
       employees.gender,
       employees.hiredate,
       employee_names.full_name,
       department.

FROM employees

LEFT JOIN employee_names
ON employees.businessentityid = employee_names.businessentityid

LEFT JOIN department
ON employees.businessentityid = department.businessentityid

)